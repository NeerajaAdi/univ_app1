<div class="row sign-up-form">
  <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= @student.name %>
          <p>Email:<%= @student.email %></p>
          <p>Course Enrollments: 
          <% if @student.courses.empty? %>
          None
          <% else %>
           <ul>
             
             <% @student.courses.each do |course| %>
              <li>
                
                Course name: <%= course.name %> 
                <% end %>
              </li>
           </ul>
          <% end %>
          </p>
        </div>
        <div class="card-action">
          </div>
      </div>
      <% if current_user == @student %>
      <%= link_to '<i class="material-icons right">create</i>Edit your profiele'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
       <% end %>
       </div>
</div>
